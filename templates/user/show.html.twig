{% extends 'user/index.html.twig' %}

{% block title %}Пользователь{% endblock %}

{% block admin_content %}
    <h3>Просмотр пользователя № {{ user.id }}</h3>

<div class="show-table">
    <table class="table table-hover">
        <tbody>
            <tr>
                <th>№</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Электронная почта</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Роль</th>
                {% if (user.roles[0] == 'ROLE_ADMIN') %}
                    <td>Администратор</td>
                {% elseif (user.roles[0] == 'ROLE_OPERATOR')%}
                    <td>Оператор</td>
                {% elseif (user.roles[0] == 'ROLE_MANAGER')%}
                    <td>Менеджер</td>
                {% elseif (user.roles[0] == 'ROLE_STMANAGER')%}
                    <td>Старший менеджер</td>
                {% endif %}
            </tr>
            <tr>
                <th>Имя</th>
                <td>{{ user.firstname }}</td>
            </tr>
            <tr>
                <th>Фамилия</th>
                <td>{{ user.lastname }}</td>
            </tr>
            <tr>
                <th>Отчество</th>
                <td>{{ user.middlename }}</td>
            </tr>
        </tbody>
    </table>
</div>
<div class="show-buttons">
    <a href="{{ path('user_index') }}" class="btn btn-outline-primary">Назад к списку</a>
    <a href="{{ path('user_edit', {'id': user.id}) }}" class="btn btn-outline-primary">Редактировать</a>
    {% if (user.roles[0] != 'ROLE_OPERATOR') %}
        <a href="{{ path('application_user', {'id': user.id}) }}" class="btn btn-outline-primary">Заявки</a>
    {% endif %}
    {{ include('user/_delete_form.html.twig') }}
</div>
{% endblock %}
