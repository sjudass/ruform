<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Ruform{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('css/datatables.min.css') }}">
            <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.4/css/bootstrap.min.css" integrity="2hfp1SzUoho7/TsGGGDaFdsuuDL0LX2hnUp6VkX3CUQ2K4K+xjboZdsXyp4oUHZj" crossorigin="anonymous">
            <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
            <link rel="stylesheet" href="//cdn.jsdelivr.net/chartist.js/latest/chartist.min.css">
            <link rel="stylesheet" href="{{ asset('css/style.css') }}">
        {% endblock %}
        <div class="navbar bg-primary navbar-fixed-top">
            <div class="container-fluid">
                <div class="navbar-header">
                    <a class="navbar-brand" href="/">Ruform</a>
                </div>
                <div class="navbar-right">
                    {% block navbar %}
                        <a class="nav-item nav-link active" href="/">Главная</a>
                        <a class="nav-item nav-link" href="/about">О нас</a>
                        {% if is_granted('ROLE_ADMIN')  %}
                            <a class="nav-item nav-link"  href="/consult">Онлайн консультант</a>
                            <a class="nav-item nav-link"  href="/admin">Панель администратора</a>
                            <a class="nav-item nav-link" id="logout" href="/logout">Выйти</a>
                        {% elseif is_granted('ROLE_MANAGER') %}
                            <a class="nav-item nav-link"  href="/admin/applications">Управление заявками</a>
                            <a class="nav-item nav-link" id="logout" href="/logout">Выйти</a>
                        {% elseif is_granted('ROLE_OPERATOR') %}
                            <a class="nav-item nav-link"  href="/consult">Онлайн консультант</a>
                            <a class="nav-item nav-link" id="logout" href="/logout">Выйти</a>
                        {% elseif is_granted('IS_AUTHENTICATED_ANONYMOUSLY') %}
                            <a id="service_open" class="nav-item nav-link" href="">Оформить услугу</a>
                            <a id="login_open" class="nav-item nav-link" href="">Войти</a>
                        {% endif %}
                    {% endblock %}
                </div>
            </div>
        </div>
    </head>
    <body>
        {% block body %}

            {% if not app.user %}
                {% block service %}
                    <div class="navbar-fixed-top service_generate">
                        {% include 'main/service.html.twig' %}
                    </div>
                {% endblock %}
                {% block login %}
                    <div class="navbar-fixed-top login_generate">
                        {% include 'security/login.html.twig' %}
                    </div>
                {% endblock %}

            {% endif %}
        <div class="container">
            {% block content %}

            {% endblock %}
        </div>
            {% if not app.user %}
                <div class="chat" id="chat">
                    <button class="btn btn-outline-primary" id="closeChat"><i class="fa fa-envelope-o"></i>  Задайте нам вопрос</button>
                    <div class="chat_content" id="chat_content">
                        {% if app.session.get('client') %}
                            {% include 'main/dialog.html.twig' %}
                        {% else %}
                            {% include 'main/chat.html.twig' %}
                        {% endif %}
                    </div>
                </div>
            {% endif %}
        {% endblock %}

        {% block modal %}
        {% endblock %}
        <div class="bg_login"></div>
        {% block javascripts %}
            <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.0.0/jquery.min.js" integrity="sha384-THPy051/pYDQGanwU6poAc/hOdQxjnOEXzbT+OuUAFqNqFjL+4IGLBgCJC3ZOShY" crossorigin="anonymous"></script>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/tether/1.2.0/js/tether.min.js" integrity="sha384-Plbmg8JY28KFelvJVai01l8WyZzrYWG825m+cZ0eDDS1f7d/js6ikvy1+X+guPIB" crossorigin="anonymous"></script>
            <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.4/js/bootstrap.min.js" integrity="VjEeINv9OSwtWFLAtmc4JCtEJXXBub00gtSnszmspDLCtC0I4z4nqz7rEFbIZLLU" crossorigin="anonymous"></script>
            <script src="//cdn.jsdelivr.net/chartist.js/latest/chartist.min.js"></script>
            <script src="{{ asset('js/scripts.js') }}"></script>
            <script src="{{ asset('js/about.min.js') }}"></script>
            <script src="{{ asset('js/datatables.min.js') }}"></script>
        {% endblock %}
        <a href="https://seal.beyondsecurity.com/vulnerability-scanner-verification/ruform.herokuapp.com"><img src="https://seal.beyondsecurity.com/verification-images/ruform.herokuapp.com/vulnerability-scanner-2.gif" alt="Website Security Test" border="0"></a>
    </body>
</html>
